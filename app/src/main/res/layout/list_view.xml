<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".view.ArticleDetails">

    <TextView
        android:id="@+id/article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:foregroundGravity="left|center"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/info_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center|left"
                android:foregroundGravity="left|center"
                android:src="@drawable/leaf1" />

            <ImageView
                android:id="@+id/info_image2"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center|left"
                android:layout_weight="1"
                android:foregroundGravity="left|center"
                android:src="@drawable/leaf1" />

            <ImageView
                android:id="@+id/info_image3"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center|left"
                android:layout_weight="1"
                android:foregroundGravity="left|center"
                android:src="@drawable/leaf1" />

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/price"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:gravity="center|right|center_horizontal|center_vertical"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="â‚¬"
            android:textSize="20dp" />

        <TextView
            android:layout_width="93dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_weight="1"
            android:gravity="center|right" />

        <TextView
            android:id="@+id/num"
            android:layout_width="39dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_weight="1"
            android:gravity="center|center_horizontal|left|center_vertical" />

        <ImageView
            android:id="@+id/cart_logo"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_marginRight="50dp"
            app:srcCompat="@drawable/ic_baseline_cart_24"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/cart_logo2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_favorite_24"
            tools:ignore="VectorDrawableCompat" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/articles_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>