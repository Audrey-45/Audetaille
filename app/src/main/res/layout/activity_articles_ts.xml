<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:orientation="vertical">

        <TextView
            android:id="@+id/title_ts"
            android:layout_width="fill_parent"
            android:layout_height="28dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
            android:id="@+id/img_ts"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:contentDescription="TODO" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price_ts"
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:gravity="center|right|center_horizontal|center_vertical"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="â‚¬"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/color_ts"
                android:layout_width="61dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/size_ts"
                android:layout_width="66dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/logo_ts"
                android:layout_width="122dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/delete_ts"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_menu_delete" />

        </LinearLayout>
</LinearLayout>


